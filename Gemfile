source 'https://rubygems.org'
ruby "2.0.0"

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails'
gem 'pg'

gem 'therubyracer', platforms: :ruby
gem 'sass-rails'
gem 'uglifier'
gem 'coffee-rails'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder'

group :development, :test do
  gem 'rspec-rails'
end

group :test do
  gem 'selenium-webdriver'
  gem 'capybara'
end

group :doc do
  gem 'sdoc', require: false
end

group :production do
  # required by Heroku
  gem 'rails_12factor'
end

# Custom
gem 'mail_form'
gem 'animate-rails'
gem 'jquery-ui-rails'
gem 'mercury-rails', git: 'https://github.com/jejacks0n/mercury.git'
gem 'paperclip'
gem 'crypt'
