<h2><%= Content.text('contact_title', @isMercury) %></h2>
<div class='row-fluid'>
  <div class='col-md-6 borderright'>
    <h3><%= Content.text('contact_viaemail', @isMercury) %></h3>
    <div id='contact-form' class="form" role="form">
      <div class="form-group">
        <label for="nameinput">Name</label>
        <input type="text" class="form-control" id="nameinput" placeholder="Enter your name">
      </div>
      <div class="form-group">
        <label for="emailinput">Email address <em>(Optional)</em></label>
        <input type="email" class="form-control" id="emailinput" placeholder="Enter your email address">
      </div>
      <div class="form-group">
        <label for="msginput">Your message</label>
        <textarea class="form-control" rows="3" id='msginput'></textarea>
      </div>
      <div class='text-center'>
        <div class='btn btn-success' id='btnsend-contactform'>Send message</div>
      </div>
    </div>
  </div>
  <div class='col-md-6'>
    <h3><%= Content.text('contact_viapostal', @isMercury) %></h3>
    <%= Content.text('contact_viapostal_content', @isMercury) %>
  </div>
</div>
<div class='clearfix'></div>
<hr>
<h2>Visit us!</h2>
<div class='row'>
  <div class='col-md-6'>
    <div id="map_canvas"></div>
  </div>
  <div class='col-md-6'>
    <% if !@isMercury %>
      <div class='pull-left visitimg'>    
        <img src='<%= Content.text('contact_img_icta', @isMercury, 'raw')%>'>
      </div>
    <% else %>
      <div>
        Image URL (editor only):
        <%= Content.text('contact_img_icta', @isMercury)%>
      </div>
    <% end %>
    <div>
      <%= Content.text('contact_visit_content', @isMercury) %>
    </div>
  </div>  
</div>
<script>
  google.maps.event.addDomListener(window, 'load', initialize);
  google.maps.event.addDomListener(window, 'page:load', initialize);
</script>
